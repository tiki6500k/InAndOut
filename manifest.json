{
  	"name": "In And Out",
  	"version": "1.0",
    "description": "Free your anxiety now",
    "background": {
      "scripts": ["scripts/jquery.min.js", "scripts/System.js", "scripts/common.js", "background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "test...",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "permissions": ["declarativeContent", "storage", "alarms"],
    "options_page": "options.html",
  	"manifest_version": 2
}
